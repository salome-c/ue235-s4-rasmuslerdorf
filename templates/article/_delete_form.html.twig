<form class="d-grid gap-2" method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Êtes vous sûr.e de vouloir supprimer cet article ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-primary">Supprimer</button>
</form>
