{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="text-center">Article</h1>

    <div class="container">

        <table class="table table-dark table-striped align-middle">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ article.title }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ article.content }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>
                        {% if article.Category.name is defined %}
                            {{ article.Category.name }}
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-grid gap-2">
            <div class="btn-group" role="group">
                <a class="btn btn-primary" role="button" href="{{ path('article_index') }}">Retour à la liste</a>
                <a class="btn btn-primary" role="button" href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>
            </div>
            {{ include('article/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
